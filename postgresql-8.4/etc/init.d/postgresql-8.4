#!/bin/sh -e

### BEGIN INIT INFO
# Provides:		postgresql postgresql-8.4
# Required-Start:	$local_fs $remote_fs $network $time
# Required-Stop:	$local_fs $remote_fs $network $time
# Should-Start:		$syslog
# Should-Stop:		$syslog
# Default-Start:	2 3 4 5
# Default-Stop:		0 1 6
# Short-Description:	PostgreSQL 8.4 RDBMS server
### END INIT INFO

# Setting environment variables for the postmaster here does not work; please
# set them in /etc/postgresql/8.4/<cluster>/environment instead.

. <?php echo getenv('APPNAME_HOME') ?>/etc/profile

[ -r <?php echo getenv('APPNAME_HOME') ?>/usr/share/postgresql-common/init.d-functions ] || exit 0

. <?php echo getenv('APPNAME_HOME') ?>/usr/share/postgresql-common/init.d-functions

VERSION=8.4

case "$1" in
    start)
        start $VERSION
        status $VERSION
        ;;
    stop)
        stop "$VERSION"
        ;;
    restart)
        restart "$VERSION"
        status $VERSION
        ;;
    force-reload | reload)
        reload $VERSION
        ;;
    status)
        RESULT=`status $VERSION`
        STATUS=`echo $RESULT | grep down`
        echo $RESULT
        if [ "$STATUS" = "" ]; then
            log_action_msg "PostgreSQL is running (listening on <?php echo getenv('APPNAME_PG_LISTEN_INTERFACE')?>:<?php echo getenv('APPNAME_PG_LISTEN_PORT')?>)"
            exit 0
        else
            log_action_msg "PostgreSQL is stopped"
            exit 1
        fi
	;;
    *)
        echo "Usage: $0 {start|stop|restart|reload|force-reload|status}"
        exit 1
        ;;
esac

exit 0

